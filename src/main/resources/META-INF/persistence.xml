<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="QueenOfHeartDB">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>QueenOfHeart.model.GameAction</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/db_queen_of_heart"/>
            <property name="javax.persistence.jdbc.user" value="springuser"/>
            <property name="javax.persistence.jdbc.password" value="ThePassword"/>
        </properties>
    </persistence-unit>
</persistence>
